<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_setting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentSetting">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        android:text="설정 부분 프래그먼트"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
    </TextView>


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/setting_profile_picture"
        android:src="@drawable/dog_profile"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.3">
    </de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:id="@+id/setting_profile_msg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:text="프로필사진 변경"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/setting_profile_picture"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.03">
    </TextView>

    <LinearLayout
        android:id="@+id/setting_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/setting_profile_msg"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.35">

        <TextView
            android:id="@+id/setting_change_info"
            android:layout_width="match_parent"
            android:background="@drawable/setting_background"
            android:text="  프로필 정보 변경"
            android:gravity="center_vertical"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:layout_height="60dp">
        </TextView>

        <TextView
            android:id="@+id/setting_bluetooth"
            android:layout_width="match_parent"
            android:text="  블루투스 설정"
            android:gravity="center_vertical"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:layout_height="60dp">
        </TextView>

        <TextView
            android:id="@+id/setting_alarm"
            android:layout_width="match_parent"
            android:background="@drawable/setting_background"
            android:text="  알림 설정"
            android:gravity="center_vertical"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:layout_height="60dp">
        </TextView>

    </LinearLayout>

    <Button
        android:id="@+id/logout_btn"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:text="로그아웃"
        android:textStyle="bold"
        android:backgroundTint="@color/main_color"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/setting_list"
        app:layout_constraintBottom_toBottomOf="parent">
    </Button>

</androidx.constraintlayout.widget.ConstraintLayout>